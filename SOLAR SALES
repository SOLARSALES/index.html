<script>
let cart=[];
function addCart(name,price){
  cart.push({name,price});
  document.getElementById('cartCount').textContent=cart.length;
  localStorage.setItem('solCart',JSON.stringify(cart));
}
function loadCart(){
  const c=localStorage.getItem('solCart');
  if(c){cart=JSON.parse(c);document.getElementById('cartCount').textContent=cart.length;}
  let txt=''; cart.forEach(i=>txt+=`${i.name} â‚¬${i.price}\n`);
  document.getElementById('cartField').value=txt;
}
window.addEventListener('load',loadCart);
function showSec(id){
  document.querySelectorAll('section').forEach(s=>s.style.display='none');
  document.getElementById(id).style.display='block';
}
</script>
